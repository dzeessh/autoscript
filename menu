# info
clear
menu(){
  echo "Made by DZEESSH.com"  | tee -a log-install.txt
  echo -ne "
    $(ColorGreen '1)') Show command menu.
    $(ColorGreen '2)') Create a user SSH & OVPN.
    $(ColorGreen '3)') Create a trial user SSH & OVPN. 
    $(ColorGreen '4)') Delete a user SSH & OVPN.
    $(ColorGreen '5)') Delete all expired user SSH & OVPN
    $(ColorGreen '6)') Check who login.
    $(ColorGreen '7)') Check all created user.
    $(ColorGreen '8)') Reboot the server.
    $(ColorGreen '9)') Check speed of the server.
    $(ColorBlue 'Choose an option:') "
    read a
        case $a in
	        1) menu ; menu ;;
	        2) usernew ; menu ;;
	        3) trial ; menu ;;
	        4) hapus ; menu ;;
	        5) del-expires ; menu ;;
          6) cek menu ;;
          7) cekmember ; menu ;;
          8) reboot ; menu ;;
          9) speedtest ; menu ;;
		0) exit 0 ;;
		*) echo -e $red"Wrong option."$clear; WrongCommand;;
        esac
}


function cekmember(){
  members
}
function menu(){
  notes
}
function usernew(){
  buat
}
function trial(){
  trials
}
function hapus(){
  del
}
function del-expires(){
  del-expired
}
function cek{
  ceks
}
# Call the menu function
menu





cd
